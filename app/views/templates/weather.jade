.panel.panel-default
  .panel-heading
     b Weather from forecast.io
  table.table
    tr
      td
        h1 
          b Now
          span.weather-icon(style="float:right; font-size:60px").setting(data-icon="#{currently.icon}")
          br
          span(style="font-weight:normal") #{currently.summary}
          br
          | #{currently.temperature}°
          span(style="float:right;font-weight:normal") H: #{currently.humidity}%
    tr
      td
        h4 
          span.weather-icon(style="float:right; font-size:30px").setting(data-icon="#{minutely.icon}")
          b Next Hour 
          small - #{minutely.summary}
    tr
      td
        h4 
          span.weather-icon(style="float:right; font-size:30px").setting(data-icon="#{hourly.icon}")
          b Next 24 Hours
          small - #{hourly.summary}
    tr
      td
        h4 
          span.weather-icon(style="float:right; font-size:30px").setting(data-icon="#{daily.icon}")
          b Next 5 Days
          small - #{daily.summary}
    each day in weekly
      tr
        td
          h4
            span.weather-icon(style="float:right; font-size:30px").setting(data-icon="#{day.icon}")
            b(style="font-size:120%") #{day.day} - #{day.high}°
            | /#{day.low}° - #{day.winddir} #{day.windspeed} mi/h
          h4
            small #{day.summary}

